{
  "manifest_version": 3,
  "name": "Background Color Changer",
  "version": "1.1",
  "description": "Change the background color of a webpage and apply it across the entire domain.",
  "icons": {
    "32": "icon32.png"
  },
  "permissions": [
    "scripting",
    "activeTab",
    "storage",
    "webNavigation"
  ],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "index.html",
    "default_icon": "icon32.png"
  }
}
